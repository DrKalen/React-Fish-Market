/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  background red
  transition all 0.5s
  transform translateX(-120%)  // move it off the screen
  max-height 0
  padding 0 !important //to make sure it over rides default in CSS
  &.order-enter-active
    background yellow
    max-height 60px
    padding 2rem 0 !important
    transform translateX(0)

.order-leave
  background yellow
  transition all 02.5s
  max-height 60px
  transform translateX(0)
  &.order-leave-active
    transform translateX(120%)
    background red
    max-height 0
    padding 0

.count-enter
  transition all .25s
  transform translateY(100%)  //start off-screen
  &.count-enter-active
    transform translateY(0) // put it in its normal resting spot

.count-leave  
  transition all .25s
  position absolute //so the incoming and outgoing numbers overlap
  left 0
  bottom 0
  transform translateY(0) // start it where it is
  &.count-leave-active 
    transform translateY(-100%)